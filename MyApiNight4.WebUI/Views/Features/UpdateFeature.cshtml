@model MyApiNight4.WebUI.Dtos.UpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<h4>Öne Çıkan Kitabı Güncelle</h4>

<form method="post">
    <div class="container">
        <br /> <br />
        <input type="hidden" asp-for="FeatureId" />
        <label>Öne Çıkacak Kitap Adı</label>
        <input type="text" asp-for="FeatureBookName" class="form-control" />
        <br />

        <label>Öne Çıkacak Kitap Açıklama</label>
        <input type="text" asp-for="FeatureDescription" class="form-control" />
        <br />

        <label>Öne Çıkacak Kitap Resmi</label>
        <input type="text" asp-for="FeatureImageUrl" class="form-control" />
        <br />

        <button class="btn btn-success">Kategoriyi Güncelle</button>
    </div>
</form>
