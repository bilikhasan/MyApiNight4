@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <title>BookSaw - Free Book Store HTML CSS Template</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="~/Booksaw/css/normalize.css">
    <link rel="stylesheet" type="text/css" href="~/Booksaw/icomoon/icomoon.css">
    <link rel="stylesheet" type="text/css" href="~/Booksaw/css/vendor.css">
    <link rel="stylesheet" type="text/css" href="~/Booksaw/style.css">

</head>

<body data-bs-spy="scroll" data-bs-target="#header" tabindex="0">

    <div id="header-wrap">

        <div class="top-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="social-links">
                            <ul>
                                <li>
                                    <a href="#"><i class="icon icon-facebook"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="icon icon-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="icon icon-youtube-play"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="icon icon-behance-square"></i></a>
                                </li>
                            </ul>
                        </div><!--social-links-->
                    </div>
                    <div class="col-md-6">
                        <div class="right-element">
                            <a href="#" class="user-account for-buy">
                                <i class="icon icon-user"></i><span>Account</span>
                            </a>
                            <a href="#" class="cart for-buy">
                                <i class="icon icon-clipboard"></i><span>
                                    Cart:(0
                                    $)
                                </span>
                            </a>

                            <div class="action-menu">

                                <div class="search-bar">
                                    <a href="#" class="search-button search-toggle" data-selector="#header-wrap">
                                        <i class="icon icon-search"></i>
                                    </a>
                                    <form role="search" method="get" class="search-box">
                                        <input class="search-field text search-input" placeholder="Search"
                                               type="search">
                                    </form>
                                </div>
                            </div>

                        </div><!--top-right-->
                    </div>

                </div>
            </div>
        </div><!--top-content-->

        <header id="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-2">
                        <div class="main-logo">
                            <a href="index.html"><img src="~/Booksaw/images/main-logo.png" alt="logo"></a>
                        </div>
                    </div>

                    <div class="col-md-10">

                        <nav id="navbar">
                            <div class="main-menu stellarnav">
                                <ul class="menu-list">
                                    <li class="active"><a href="index.html">Anasayfa</a></li>
                                    <li><a href="index.html">Hakkımızda</a></li>
                                    <li><a href="index.html">Yazarlar</a></li>
                                    <li><a href="index.html">Kitaplar</a></li>
                                </ul>

                                <div class="hamburger">
                                    <span class="bar"></span>
                                    <span class="bar"></span>
                                    <span class="bar"></span>
                                </div>

                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </header>
    </div><!--header-wrap-->
    @await Component.InvokeAsync("_DefaultBillboard")


    <section id="client-holder" data-aos="fade-up">
        <div class="container">
            <div class="row">
                <div class="inner-content">
                    <div class="logo-wrap">
                        <div class="grid">
                            <a href="#"><img src="~/Booksaw/images/client-image1.png" alt="client"></a>
                            <a href="#"><img src="~/Booksaw/images/client-image2.png" alt="client"></a>
                            <a href="#"><img src="~/Booksaw/images/client-image3.png" alt="client"></a>
                            <a href="#"><img src="~/Booksaw/images/client-image4.png" alt="client"></a>
                            <a href="#"><img src="~/Booksaw/images/client-image5.png" alt="client"></a>
                        </div>
                    </div><!--image-holder-->
                </div>
            </div>
        </div>
    </section>





    @await Component.InvokeAsync("_DefaultFeaturedBooks")
    @await Component.InvokeAsync("_DefaultRandomBook")


    <section id="popular-books" class="bookshelf py-5 my-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <div class="section-header align-center">
                        <div class="title">
                            <span></span>
                        </div>
                        <h2 class="section-title">Popüler Kitaplar</h2>
                    </div>

                    <ul class="tabs">
                        <li data-tab-target="#all-genre" class="active tab">Tümü</li>
                        <li data-tab-target="#fictional" class="tab">İş Dünyası</li>
                        <li data-tab-target="#technology" class="tab">Teknoloji - Bilim</li>
                        <li data-tab-target="#romantic" class="tab">Romantik - Aşk</li>
                        <li data-tab-target="#adventure" class="tab">Macera - Aksiyon</li>
                        <li data-tab-target="#business" class="tab">Bilim-Kurgu</li>
                    </ul>



                    <div class="tab-content">



                        



                       
                        
                        @await Component.InvokeAsync("_DefaultGetPopularBooksAllGenre")
                        @await Component.InvokeAsync("_DefaultGetPopularBooksFictional")
                        @await Component.InvokeAsync("_DefaultGetPopularBooksTechnology")
                        @await Component.InvokeAsync("_DefaultGetPopularBooksRomantic")
                        @await Component.InvokeAsync("_DefaultGetPopularBooksAdventure")
                        @await Component.InvokeAsync("_DefaultGetPopularBooksBusiness")


                    </div>

                </div><!--inner-tabs-->

            </div>
        </div>
    </section>

    <section id="quotation" class="align-center pb-5 mb-5">
        <div class="inner-content">
            <h2 class="section-title divider">Günün Sözü</h2>
            <blockquote data-aos="fade-up">
                <br />
                <img src="https://teknobox.com.tr/assets/upload/image/motivasyon1.jpeg" alt="Success and Motivation" style="width:500px; height:350px;" />
                <q>
                    Sessizce sıkı çalışın, bırakın başarı sesiniz olsun.
                </q>
                <div class="author-name">Frank Ocean</div>
            </blockquote>
        </div>
    </section>




    @await Component.InvokeAsync("_DefaultAuthors")

 

    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="footer-item">
                        <div class="company-brand">
                            <img src="~/Booksaw/images/main-logo.png" alt="logo" class="footer-logo">
                            <p>
                                Booksaw, kitap tutkunlarının hayalindeki bir durak! Dükkanımız, her yaştan ve her zevkten okuyucuya hitap eden birbirinden çeşitli kitaplarla dolu. Edebiyattan tarihe, bilimden sanata kadar geniş bir yelpazede sunduğumuz seçkilerle her okuyucunun ruhuna dokunmayı amaçlıyoruz. 
                            </p>
                        </div>
                    </div>

                </div>

                <div class="col-md-2">
                    <div class="footer-menu">
                        <h5>Hakkımızda</h5>
                        <ul class="menu-list">
                            <li class="menu-item">
                                <a href="#">Vizyon</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Misyon</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Kariyer</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Hizmet Şartları</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Bağış Yapın</a>
                            </li>
                        </ul>
                    </div>

                </div>
                <div class="col-md-2">

                    <div class="footer-menu">
                        <h5>Keşfet</h5>
                        <ul class="menu-list">
                            <li class="menu-item">
                                <a href="#">Anasayfa</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Kitaplar</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Yazarlar</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Hakkımızda</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Detaylı Arama</a>
                            </li>
                        </ul>
                    </div>

                </div>
                <div class="col-md-2">

                    <div class="footer-menu">
                        <h5>Hesabım</h5>
                        <ul class="menu-list">
                            <li class="menu-item">
                                <a href="#">Giriş Yap</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Kayıt Ol</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">İzleme Listesi</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Favori Yazarlarım</a>
                            </li>
                        </ul>
                    </div>

                </div>
                <div class="col-md-2">
                    <div class="footer-menu">
                        <h5>Yardım</h5>
                        <ul class="menu-list">
                            <li class="menu-item">
                                <a href="#">Yardım Merkezi</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Şikayet Et</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Öneri Oluştur</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">İletime Geçin</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- / row -->
        </div>
    </footer>

    <div id="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <div class="row">
                            <div class="col-md-6">
                                <p>
                                    © 2025 All rights reserved. Free HTML Template by <a href="https://www.templatesjungle.com/" target="_blank">TemplatesJungle</a>
                                </p>
                            </div>

                            <div class="col-md-6">
                                <div class="social-links align-right">
                                    <ul>
                                        <li>
                                            <a href="#"><i class="icon icon-facebook"></i></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="icon icon-twitter"></i></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="icon icon-youtube-play"></i></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="icon icon-behance-square"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                    </div><!--grid-->

                </div><!--footer-bottom-content-->
            </div>
        </div>
    </div>

    <script src="~/Booksaw/js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
    <script src="~/Booksaw/js/plugins.js"></script>
    <script src="~/Booksaw/js/script.js"></script>

</body>

</html>



