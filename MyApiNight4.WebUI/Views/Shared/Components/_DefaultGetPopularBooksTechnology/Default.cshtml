@model List<MyApiNight4.WebUI.Dtos.ResultBookDto>


<div id="technology" data-tab-content>
    <div class="row">
        @foreach(var item in Model)
        {
        <div class="col-md-3">
            <div class="product-item">
                <figure class="product-style">
                    <img src="@item.BookImageUrl" alt="Books" class="product-item">
                    <button type="button" class="add-to-cart" data-product-tile="add-to-cart">
                        Sepete Ekle
                    </button>
                </figure>
                <figcaption>
                    <h3>@item.BookName</h3>


                        <span><b>Sayfa Sayısı:</b> @item.BookPageCount</span>


                    <div class="item-price">@item.BookPrice ₺</div>
                </figcaption>
            </div>
        </div>

        }





    </div>
</div>