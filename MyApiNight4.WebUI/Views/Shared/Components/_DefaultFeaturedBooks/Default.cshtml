@model List<MyApiNight4.WebUI.Dtos.GetLastFourBooks>


<section id="featured-books" class="py-5 my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="section-header align-center">
                    <div class="title">
                    </div>
                    <h2 class="section-title">Son Eklenen 4 Kitap</h2>
                </div>

                <div class="product-list" data-aos="fade-up">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-3">
                                <div class="product-item">
                                    <figure class="product-style">
                                        <img src="@item.FeatureImageUrl" alt="Books" class="product-item">

                                    </figure>
                                    <figcaption>
                                        <h3>@item.FeatureBookName</h3>
                                       
                                       
                                    </figcaption>
                                </div>
                            </div>
                        }
                    </div><!--ft-books-slider-->
                </div><!--grid-->
            </div><!--inner-content-->
        </div>
    </div>
</section>
