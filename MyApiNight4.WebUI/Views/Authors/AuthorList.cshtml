@model List<MyApiNight4.WebUI.Dtos.ResultAuthorDto>

@{
    ViewData["Title"] = "AuthorList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />



<h4>Yazar Listesi</h4>

<div class="container">
    <table class="table table-hover table-bordered">
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Hakkında</th>
            <th>Resim</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.AuthorId</th>
                <td>@item.AuthorName</td>
                <td>@item.AuthorSurname</td>
                <td>@item.AuthorAbout.Substring(0, 100)...</td>
                <td><img src="@item.AuthorImageUrl" style="width:100px; height:80px; border-radius: 80%; border:5px solid#0075ff;" /></td>
                <td><a href="/Authors/DeleteAuthor/@item.AuthorId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Authors/UpdateAuthor/@item.AuthorId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Authors/CreateAuthor/" class="btn btn-primary">Yeni Yazar Ekle</a>
    <br /><br />
</div>